<!doctype html>
<head>
  {{> head}}
</head>
<body class="grid__container--page">
    <header class="grid__item grid__item--header">
        <h2>{{title}}</h2>
        <div class="grid__item--flex">
        
        <h4>{{client}}</h4>
        <h4>{{product1}}</h4>
        <ul class="tags-list">
            {{#each tag}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
    </header>
    
    <!-- sidebar sidebar area-->    
    <div class="grid__item grid__item--sidebar">
         {{> sidebar}}
    </div>

<!-- Main area -->
    <main class="grid__item grid__item--main">
        {{{ body }}}
    <button class="go-back" onclick="goBack()">Previous</button>
    </main>

<!-- Footer -->
 <footer class="grid__item grid__item--footer">
        {{> footer}}
    </footer>
    
<script>
    function goBack() {
    window.history.back();
    }
</script>
</body>
</html>